[user]
	name = Sebastian Wezel
	email = swezel@data-modul.com
[color]
	ui = auto
[core]
        pager = less -FRSX
[push]
	default = simple
[diff]
	#external = git-meld
	tool = meld
[rerere]
	enabled = true
[alias]
	co = checkout
	cl = clone
	cms = commit -sm
	st = status
	br = branch
	di = diff
	dic = diff --cached
	subup = submodule foreach 'git remote update && echo'
	subst = submodule foreach 'git status && echo'
	subgr = !bash -c \"git submodule foreach 'git grep $1 || true && echo'\"
	subgitk = !bash -c \"git submodule foreach 'gitk --all &'\"
[tig "bind"]
	main = H view-refs
[tig "color"]
	date = cyan default
	graph-commit = cyan default
